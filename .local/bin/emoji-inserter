#!/bin/sh

xclip -h 2>/dev/null || exit 1
#dmenu -l 20 -p "select emoji" 

Selected=$(cut -d ';' -f1 ~/.local/share/emoji |fzf --reverse --prompt="selelct emoji >"| sed "s/ .*//")

[ "$Selected" != "" ] || exit 5

echo $Selected

if [ -n "$1" ]; then
    xdotool key ctrl+v
    notify-send -i -u low "'$Selected' thosc." && exit 5
else
    echo "$Selected" | tr -d '\n' | xclip -selection clipboard & disown
    notify-send -i -u  "'$Selected' copied to clipboard." &
fi

